<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="TelcoService_EJB">
        <class>it.polimi.db2.telcoservice_sc42.entities.Client</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.Order</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.Service</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.ServicePackage</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.Validity</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.MobilePhoneService</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.FixedInternetService</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.OptionalProduct</class>
        <class>it.polimi.db2.telcoservice_sc42.entities.Auditing</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/telcoservice_db"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/telcoservice_db"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.logging.level" value="FINE"/>
            <property name="hibernate.show_sql" value="true" />
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/telcoservice_db"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/telcoservice_db"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.logging.level" value="FINE" />
        </properties>

    </persistence-unit>
</persistence>
