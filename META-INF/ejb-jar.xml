<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd"
         version="4.0">
    <enterprise-beans>
        <session>
            <ejb-name>LoginService</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.services.ClientService</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <ejb-name>EmployeeService</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.services.EmployeeService</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <ejb-name>PackageService</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.services.PackageService</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <ejb-name>OrderService</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.services.OrderService</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <ejb-name>ClientEJB</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.entities.Client</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
        </entity>
        <entity>
            <ejb-name>OrderEJB</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.entities.Order</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
        </entity>
        <entity>
            <ejb-name>ValidityEJB</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.entities.Validity</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
        </entity>
        <entity>
            <ejb-name>ServicePackageEJB</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.entities.ServicePackage</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
        </entity>
        <entity>
            <ejb-name>ServiceEJB</ejb-name>
            <ejb-class>it.polimi.db2.telcoservice_sc42.entities.Service</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
        </entity>
    </enterprise-beans>
</ejb-jar>
